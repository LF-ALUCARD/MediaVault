package devfull.MediaVault.entities;

import java.io.Serializable;
import java.time.LocalDate;

import devfull.MediaVault.entities.enums.Type;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;

@Entity
@Table(name = "tb_arquivo")
public class Arquivo implements Serializable {

	private static final long serialVersionUID = 1L;
	
	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	private Long id;
	private String nome_arquivo;
	private Type tipo;
	private String caminho_ws;
	private LocalDate data_upload;
	private LocalDate data_expircao;

	private User user;

	public Arquivo() {
	}

	public Arquivo(Long id, String nome_arquivo, int tipo, String caminho_ws, LocalDate data_upload,
			LocalDate date_expircao, User user) {
		super();
		this.id = id;
		this.nome_arquivo = nome_arquivo;
		this.tipo = Type.valueOf(tipo);
		this.caminho_ws = caminho_ws;
		this.data_upload = data_upload;
		this.data_expircao = date_expircao;
		this.user = user;
	}

	public Long getId() {
		return id;
	}

	public void setId(Long id) {
		this.id = id;
	}

	public String getNome_arquivo() {
		return nome_arquivo;
	}

	public void setNome_arquivo(String nome_arquivo) {
		this.nome_arquivo = nome_arquivo;
	}

	public Type getTipo() {
		return tipo;
	}

	public void setTipo(Type tipo) {
		this.tipo = tipo;
	}

	public String getCaminho_ws() {
		return caminho_ws;
	}

	public void setCaminho_ws(String caminho_ws) {
		this.caminho_ws = caminho_ws;
	}

	public LocalDate getData_upload() {
		return data_upload;
	}

	public void setData_upload(LocalDate data_upload) {
		this.data_upload = data_upload;
	}

	public LocalDate getData_expircao() {
		return data_expircao;
	}

	public void setData_expircao(LocalDate date_expircao) {
		this.data_expircao = date_expircao;
	}

	public User getUser() {
		return user;
	}

	public void setUser(User user) {
		this.user = user;
	}

}
